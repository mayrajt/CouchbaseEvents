<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jaramillomayra.couchbaseevents.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/crearDoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_weight=".2"
        android:background="@color/rosa"
        android:text="@string/crear_doc"
        android:textColor="@color/blanco"
        android:textStyle="bold" />

    <Button
        android:id="@+id/actualizaDoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_weight=".2"
        android:background="@color/azul"
        android:text="@string/actualizar_doc"
        android:textColor="@color/blanco"
        android:textStyle="bold" />

    <Button
        android:id="@+id/consultaDoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_weight=".2"
        android:background="@color/morado"
        android:text="@string/consulta_doc"
        android:textColor="@color/blanco"
        android:textStyle="bold" />

    <Button
        android:id="@+id/eliminaDoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight=".2"
        android:background="@color/verde"
        android:text="@string/eliminar_doc"
        android:textColor="@color/blanco"
        android:textStyle="bold" />
</LinearLayout>
